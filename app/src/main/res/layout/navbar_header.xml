<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorNavbar"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/navbar_userImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_account_circle_black_48dp" />

        <TextView
            android:id="@+id/navbar_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/vk_black"
            android:layout_marginBottom="10dp"
            android:text="@string/user_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/navbar_manageButton"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:textColor="@color/vk_white"
            android:background="@drawable/swift_shape_button"
            android:text="@string/manage_published" />

    </LinearLayout>
</LinearLayout>
