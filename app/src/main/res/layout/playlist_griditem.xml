<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/playlist_gridItemImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="@string/action_settings"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/record_background" />

        <TextView
            android:id="@+id/playlist_gridItemTitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="13sp"
            android:padding="2dp"
            android:text="Playlist Title"
            android:textColor="@color/vk_white"
            android:layout_below="@+id/playlist_gridItemImage"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/playlist_gridItemAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:padding="3dp"
            android:text="playlist title"
            android:textColor="@color/vk_white"
            android:layout_below="@+id/playlist_gridItemTitle"
            android:background="@color/colorPrimaryDark"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>